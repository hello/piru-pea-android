<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hello.pirupea.dfu.BleDFUActivity">

    <TextView
        android:text="( > ^ _^ )> "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:id="@+id/btnDFUScan"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select FW"
        android:id="@+id/btnSelectFirmware"
        android:layout_below="@+id/btnDFUScan"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Target"
        android:id="@+id/tvDFUTarget"
        android:layout_above="@+id/btnSelectFirmware"
        android:layout_toEndOf="@+id/btnDFUScan"
        android:layout_alignTop="@+id/btnDFUScan"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No FW Selected"
        android:id="@+id/tvFW"
        android:layout_below="@+id/tvDFUTarget"
        android:layout_toEndOf="@+id/btnSelectFirmware"
        android:layout_alignBottom="@+id/btnSelectFirmware"
        android:gravity="center_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btnStartDFU"
        android:layout_below="@+id/btnSelectFirmware"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProgress"
        android:layout_alignBottom="@+id/btnStartDFU"
        android:layout_toEndOf="@+id/btnStartDFU"
        android:layout_alignEnd="@+id/tvFW"
        android:layout_alignTop="@+id/btnStartDFU"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
